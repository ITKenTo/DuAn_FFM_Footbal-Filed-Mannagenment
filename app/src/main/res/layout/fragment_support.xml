<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SupportFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linner_accout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pertion"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn Dũng"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linner_doimk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lockdoimk"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi Mật Khẩu"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linner_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/exit"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Xuất"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>


</LinearLayout>